@model IEnumerable<ODS.DataLayer.ods_estado>

@{
    ViewBag.Title = "Index";
}

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Catálogo de Estados | @Html.ActionLink("Agregar", "Create")
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ods_pais.Pais)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ods_pais.Pais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdEstado }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdEstado }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEstado })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





