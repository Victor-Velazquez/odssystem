@model IEnumerable<ODS.DataLayer.ods_objetivo_municipio>

@{
    ViewBag.Title = "Index";
}

<div class="card-header">
    <i class="fas fa-table"></i>
    Objetivos del Municipio de Zapopan
</div>

<!-- Icon Cards-->
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-dark o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                    </div>
                    <div class="mr-5">
                        @Html.DisplayFor(modelItem => item.Numeral) - 
                        @Html.DisplayFor(modelItem => item.ObjetivoMunicipio)
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">@Html.ActionLink("Metas", "../ods_meta/Index", new { idObjetivo = item.IdObjetivoMunicipio }) </span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    }


