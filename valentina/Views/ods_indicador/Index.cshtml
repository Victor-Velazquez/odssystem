@model IEnumerable<ODS.DataLayer.ods_indicador>

@{
    ViewBag.Title = "Index";
}

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Indicadores del Municipio
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ods_municipio.Municipio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Indicador)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Vigente)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ods_municipio.Municipio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Indicador)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Vigente)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ods_municipio.Municipio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Indicador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vigente)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdIndicador }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdIndicador })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>